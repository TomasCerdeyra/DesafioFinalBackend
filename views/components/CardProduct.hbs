{{!-- Para carrito con este div: div class="row row-cols-1 row-cols-md-3 g-4 " --}}
<div class="col">
    <div class="card h-100">
        <img src="{{this.image}}" class="card-img-top img-thumbnail" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.description}}</p>
            <p>Precio: {{this.price}}$</p>
        </div>
        <div class="card-footer">
            <a href="/api/carrito/{{this._id}}" type="button" class="btn btn-outline-warning">Agregar al carrito</a>
        </div>
    </div>
</div>